# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SOCIETY_MMGTSUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SOCIETY_MMGTSUPABASE_ANON_KEY=your_supabase_anon_key_here
NEXT_PUBLIC_SOCIETY_MMGTSUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# ====================================
# POSTGRESQL DATABASE (Optional - managed by Supabase)
# ====================================
POSTGRES_DATABASE=postgres
POSTGRES_HOST=db.your-project-id.supabase.co
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_PRISMA_URL=postgres://postgres.your-project:password@aws-region.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true
POSTGRES_URL=postgres://postgres.your-project:password@aws-region.pooler.supabase.com:6543/postgres?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://postgres.your-project:password@aws-region.pooler.supabase.com:5432/postgres?sslmode=require

# ====================================
# APP CONFIGURATION
# ====================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ====================================
# JWT SECRET FOR AUTHENTICATION
# ====================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_random_64_character_jwt_secret_here

# ====================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ====================================
# Setup instructions: https://vksagar82.github.io/society-management-app/email-setup
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_16_char_app_password

# ====================================
# CRON JOB SECRET (Optional)
# ====================================
CRON_SECRET=your_random_cron_secret_here
